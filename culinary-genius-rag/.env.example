# CulinaryGenius RAG - Environment Configuration
# Copy this file to .env and fill in your API keys

# OpenAI Configuration (Required)
OPENAI_API_KEY=your_openai_api_key_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
ENVIRONMENT=development
DEBUG=true

# RAG Configuration
MAX_CONTEXT_LENGTH=8000
MAX_RESPONSE_LENGTH=1000
RESPONSE_TEMPERATURE=0.3
EMBEDDING_BATCH_SIZE=100

# Culinary Configuration
MAX_RECIPES_PER_QUERY=5
INCLUDE_NUTRITIONAL_INFO=true
INCLUDE_CULTURAL_CONTEXT=true
DEFAULT_SERVING_SIZE=4

# Optional: External APIs
NUTRITION_API_KEY=your_nutrition_api_key_here
USDA_API_KEY=your_usda_api_key_here

# Cache Configuration
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600

# Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Feature Flags
ENABLE_RECIPE_GENERATION=true
ENABLE_MEAL_PLANNING=true
ENABLE_SHOPPING_LISTS=true
ENABLE_COOKING_TIMER=true
